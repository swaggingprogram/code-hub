<div class= "left-bot">
  <div class= "code-area">
    <% @codes.each do |code| %>
    <div class="code-wrapper">
      <div class="code-image">
        <%= link_to(code_path(code.id), class: "code-link") do %>
        <%= markdown(code.codetext).html_safe %>
        <% end %>
      </div>
      <%= link_to(code_path(code.id), class: "code-link") do %>
      <div class="code-text">
        <div class="code-title">
          <h2 class="post-title"> <%= code.title %> </h2>
        </div>
        <div class="code-explain">
        </div>
      </div>
      <% end %>
    </div> 
    <% end %> 
  </div>
</div>
<div class="right-bot">
  <%= link_to(new_code_path) do %>
  <div class="code-post">
    <p class="new-submit">NEW POST</p>
    <p class="new-submit">TOUKOU</p>
    <p class="new-submit">NEW CODE</p>
  </div>
  <% end %>
  <div class="link-area">
    <div class="link-lists">
      <div class="search-title">
        検索はこちらから
      </div>
      <div class="search-section">
        <%= search_form_for @q, url: search_codes_path, html: {class: "search-form"} do |f| %>
          <div class="search-box">
            <label class="new-text">検索ワード</label>
            <%= f.text_field :title_cont, placeholder: '商品名',class: "detailed-search-form" %>
          </div>
          <div class="search-box">
            <label class="new-text">カテゴリー</label>
            <%= f.collection_select(:category_id_eq, Category.all, :id, :name, {include_blank: ""}, {class: "detailed-search-form"}) %>
          </div>
          <div class=search-box>
            <%= f.submit '検索', class: "search-btn" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
