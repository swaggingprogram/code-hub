<div class= "left-bot">
  <div class= "code-area">
    <% @codes.each do |code| %>
    <div class="code-wrapper">
      <div class="code-image">
        <%= link_to(code_path(code.id), class: "code-link") do %>
        <%= markdown(code.codetext).html_safe %>
        <% end %>
      </div>
      <%= link_to(code_path(code.id), class: "code-link") do %>
      <div class="code-text">
        <div class="code-title">
          <%= code.title %>
        </div>
        <div class="code-explain">
        </div>
      </div>
      <% end %>
    </div> 
    <% end %> 
  </div>
</div>
<div class="right-bot">
  <div class="link-area">
    <div class="code-post">
      <%= link_to "投稿する", new_code_path %>
    </div>
    <div class="link-lists">
    </div>
  </div>
</div>
