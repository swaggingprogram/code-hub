<div class="show-wrapper">
  <div class="show-code">
    <div class= "show-header">
      <h1 class= "show-head-text">
        Your Code
      </h1>
    </div>
    <div class="code-show">
      <p><%= markdown(@code.codetext).html_safe %><p>
    </div>
    <div class= "show-settings">
      <div class="show-buttons">
        <% if user_signed_in? && @code.user.id == current_user.id %>
        <%= link_to(edit_code_path, method: :get, class: "edit-btn") do %>
        <div class ="btn">
          編集する
        </div>
        <% end %>
        <%= link_to(code_path, method: :delete, class: "delete-btn") do %>
        <div class ="btn">
          削除する
        </div>
        <% end %>
        <% end %>
        <%= link_to(root_path, class: "return-btn") do %>
        <div class ="btn">
          戻る
        </div>
        <% end %>
        <div class ="btn">
        </div>
        <div class ="btn">
        </div>
      </div>
    </div>
    <div class= "show-info">
       <div class="info-show">
          <%= @code.user.nickname %>
      </div>
      <div class="info-show">
          <%= @code.category.name %>
      </div>
      <div class="info-show">
          <%= @code.genre.name %>
      </div>
    </div>  
  </div>
  <div class="show-comment">
   <div class="comment-area">
   </div>
   <div class="comment-form">
   </div>
  </div>
</div>