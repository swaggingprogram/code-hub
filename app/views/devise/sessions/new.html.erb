<div class="login-wrapper">
  <%= form_with model: @user, url: user_session_path, class: 'login-main', local: true do |f| %>
  <div class="signin-main">
    <div class="form-head">
      <h1 class="form-head-text">
        Login 
      </h1>
    </div>

    <div class='login-flash-message'>
    <%= flash[:notice] %>
    <%= flash[:alert] %>
    </div>

    <div class="form-group">
      <div class="form-text-wrap">
        <label class="login-text">メールアドレス</label>
      </div>
      <%= f.text_area :email, class:"input-login", id:"email", autofocus: true %>
    </div>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="login-text">パスワード</label>
      </div>
      <%= f.password_field :password, class:"input-login", id:"password" %>
    </div>
    <div class='login-btn'>
      <%= f.submit "ログイン" ,class:"login-btn" %>
    </div>
  </div>
  <% end %>

  <div class="code-main">
  </div>
</div>